<%= form_for :session, url: session_path do |form| %>
    <%= render(Form::TextFieldComponent.new(form: form, name: :email, label: t(".email"))) %>
    <%= render(Form::PasswordFieldComponent.new(form: form, name: :password, label: t(".password"))) %>
    <%= render(Form::SubmitComponent.new(form: form, text: t(".sign_up"))) %>
<% end %>

<div class="other-links flex space-x-3">
  <%= render(ButtonComponent.new(variant: 2)) { link_to t(".forgot_password"), new_password_path } %>
  <% if Clearance.configuration.allow_sign_up? %>
    <%= render(ButtonComponent.new(variant: 2)) { link_to t(".sign_up"), sign_up_path } %>
  <% end %>
</div>
