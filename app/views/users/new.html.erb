<%= render(ScreenComponent.new) do %>

  <h1 class="font-serif text-5xl font-black tracking-wider mx-auto">BOOKLUB</h1>

  <%= form_for @user do |form| %>
    <%= render(Form::TextFieldComponent.new(form: form, name: :email, label: t(".email"))) %>
    <%= render(Form::PasswordFieldComponent.new(form: form, name: :password, label: t(".password"))) %>
    <%= render(Form::SubmitComponent.new(form: form, text: t(".sign_up"))) %>
  <% end %>

  <%= render(ButtonComponent.new(variant: 2)) { link_to t('.sign_in'), sign_in_path } %>

<% end %>
