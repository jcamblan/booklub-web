<%= form_for :read_session, url: club_read_sessions_path do |form| %>
  <%= render(Form::TextFieldComponent.new(form: form, name: :name, label: t(".session_name"), default_value: next_session_name(@club))) %>
  <%= render(Form::DateTimeInputComponent.new(form: form, name: :submission_due_date, label: t(".submission_due_date"))) %>
  <%= render(Form::DateTimeInputComponent.new(form: form, name: :read_due_date, label: t(".read_due_date"))) %>
  <%= render(Form::SubmitComponent.new(form: form, text: t(".create"))) %>
<% end %>
