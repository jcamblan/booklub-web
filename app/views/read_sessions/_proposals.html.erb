<h2 class="mb-5 text-lg font-semibold"><%= t('.book_proposals') %></h2>

<div data-controller="carousel" class="swiper-container">
  <div class="swiper-wrapper">
    <% books.each do |book| %>
      <div  class="swiper-slide">
        <div class="rounded-lg">
          <% if book.cover.present?%>
            <%= image_tag book.cover.variant(:thumb), class: "rounded-lg max-h-56" %>
          <% else %>
            <%= image_tag '/cover-placeholder.jpg', class: "rounded-lg max-h-56" %>
          <% end %>
        </div>
        <h3 class="font-semibold"><%= book.title %></h3>
        <p class="text-slate-500"><%= t('.submitted_by', submitters: book_submitters(book, @read_session)) %></p>
      </div>
    <% end %>
  </div>
</div>
