<% if @variant == 1 %>

  <div class="inline-flex rounded-lg shadow flex-grow">
    <div class="inline-flex items-center flex-grow justify-center px-5 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700">
      <%= content %>
    </div>
  </div>

<% elsif @variant == 2 %>

  <div class="inline-flex rounded-lg shadow flex-grow">
    <div class="inline-flex items-center flex-grow justify-center px-5 py-3 border border-transparent text-base font-medium rounded-lg text-black dark:text-slate-100 bg-slate-50 dark:bg-zinc-800 hover:bg-indigo-50 dark:hover:bg-zinc-700">
      <%= content %>
    </div>
  </div>

<% end %>
