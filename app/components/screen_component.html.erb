<div class="self-center justify-self-center flex-col flex mx-auto w-full">
  <div>
    <% if @back_path.present? %>
      <div class="text-indigo-500">
        <%= link_to @back_path do %>
          <i class="fa fa-angle-left"></i>
          <span><%= t('.back') %></span>
        <% end %>
      </div>
    <% end %>

    <div class="flex flex-row justify-between">
      <% if @title.present? %>
        <h1 class="my-3 text-2xl font-bold">
          <%= @title %>
        </h1>
      <% end %>

      <% if @modal_toggler %>
        <button>
          <i data-modal-target="button" data-action="click->modal#open" class="fa fa-cog"></i>
        </button>
      <% end %>
    </div>
  </div>

  <%= content %>
</div>
